{
  "name": "luau-mode-setter",
  "displayName": "luau-mode-setter",
  "description": "Quickly set strict mode for luau script",
  "publisher": "sonnguyen9800",
  "repository": {
    "type": "git",
    "url": "https://github.com/sonnguyen9800/Luau-Mode-Setter.git"
  },
  "keywords": ["roblox", "luau", "vscode", "extension", "gamedev"],
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.luau"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.activateModeManually",
        "title": "Activate \"Luau Mode Setter\" manually"
      },
      {
        "command": "extension.setModeStrict",
        "title": "Strict"
      },
      {
        "command": "extension.setModeNonstrict",
        "title": "Nonstrict"
      },
      {
        "command": "extension.setModeNocheck",
        "title": "Nocheck"
      }
    ],

    "submenus": [
      {
        "id": "submenuId",
        "label": "Luau Mode Setter"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.activateModeManually",
          "group": "navigation",
          "when": "editorLangId == 'luau'"
        }
      ],
      "explorer/context": [
        {
          "when": "luauModeSetterActivated && (resourceLangId == luau || explorerResourceIsFolder)",
          "group": "navigation",
          "title": "Luau Mode Setter",
          "submenu": "submenuId"
        }
      ],

      "submenuId":[
        {
          "command": "extension.setModeStrict"
        },
        {
          "command": "extension.setModeNonstrict"
        },        
        {
          "command": "extension.setModeNocheck"
        }
      ]


    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
